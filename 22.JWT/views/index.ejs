<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JWT</title>
    <!-- axios CDN -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>JWT</h1>
    <div id="info"></div>
    <script>
      // 즉시 실행 함수
      (function text(t) {
        console.log(t);
      })("hello");
      (function () {
        console.log("즉시 실행 함수");
      })();

      (() => {
        console.log("화살표 함수 즉시 실행");
      })();

      // axios 요청과 전역 변수 선언을 피하기 위해서
      // 즉시 실행 함수 사용
      (async function () {
        const token = localStorage.getItem("login");
        const info = document.getElementById("info");
        console.log("index >> 여기니", token);
        let data;
        if (!token) {
          // 토큰이 없을 때 -> token = null
          // 로그인 페이지로 이동할 수 있도록
          data = '<a href = "/login">로그인</a>';
        } else {
          // 토큰이 있을 때
          // 토큰 검증 과정을 거쳐서(in server)  -> POST '/token'
          const response = await axios({
            method: "post",
            url: "/token",
            headers: {
              Authorization: `Bearer ${token}`, // 약속 되어 있는 형식
            },
          });
          console.log(response.data);
          // ~님 환영합니다, 로그아웃 버튼
          if (response.data.result) {
            data = `
            <p>${response.data.name}님 환영합니다!!</p>
            <button onclick="logout()">로그아웃</button>
            `;
          }
        }
        info.innerHTML = data;
      })();

      function logout() {
        localStorage.clear();
        document.location.reload(); // 새로 고침
      }
    </script>
  </body>
</html>
